<h1>Update Pet</h1>


<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Pet Name: </label> <input type="text" name="pet_name" value="<%= @pet.name %>"><br>

<label>Owner:</label><br>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id][]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner%>
    <label><%= owner.name %></label><br>
  <% end %>

  <label>And/Or Create A New Owner:</label><br>
  <input type="text" name="owner[name]" id="owner_name"><br>

  <input type="submit" name="" value="Update Pet">
</form>
