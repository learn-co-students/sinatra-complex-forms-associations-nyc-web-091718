<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]">

  <br></br>
  <label>Pets that belong to this owner:</label><br>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>">
  <%= pet.name %>
  <% end %><br><br>

  <label>And/Or Register a New Pet:</label><br>
  <label>Name: </label><br>
  <input type="text" name="pet[name]" value="">
  <br>

  <input type="submit" value="Create Owner">


</form>
