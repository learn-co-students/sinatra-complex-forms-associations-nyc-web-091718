<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" value="<%= @owner.name %>">

  <br></br>
  <label>Update which pets belong to this owner:</label><br>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>"
    <%='checked' if @owner.pets.include?(pet) %>>
  <%= pet.name %></input>
  <% end %><br><br>

  <label>And/Or Register a New Pet:</label><br>
  <label>Name: </label><br>
  <input type="text" name="pet[name]" value="">
  <br>

  <input type="submit" value="Update Owner">


</form>
